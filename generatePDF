from reportlab.pdfgen import canvas
from reportlab.lib.units import cm

def GeneratePDF(nome_pdf):
    try:
        img_file = 'base.jpg'
        nome_pdf += '.pdf'
        
        can = canvas.Canvas(nome_pdf)
        x_start = 21*cm
        y_start = 29,7*cm
        can.drawImage(img_file, 0, 5, 21*cm, 29.7*cm,mask='auto')
        
        can.showPage()
        can.save()


    except: 
        print('Erro ao gerar {}.pdf'.format(nome_pdf)) 

nome = input("Informe o nome do arquivo: ")
GeneratePDF(nome)